# Lab 14: Production Deployment Configuration
# Copy this file to .env and update values

# Environment Type
ENVIRONMENT=development
# Options: development, staging, production

# Neo4j Database (Development)
DEV_NEO4J_URI=bolt://localhost:7687
DEV_NEO4J_USERNAME=neo4j
DEV_NEO4J_PASSWORD=password

# Neo4j Database (Staging)
STAGING_NEO4J_URI=bolt://staging-server:7687
STAGING_NEO4J_USERNAME=neo4j
STAGING_NEO4J_PASSWORD=staging_password

# Neo4j Database (Production)
PROD_NEO4J_URI=bolt://prod-server:7687
PROD_NEO4J_USERNAME=neo4j
PROD_NEO4J_PASSWORD=prod_password

# Security
ENCRYPTION_KEY=your-encryption-key-here
JWT_SECRET=your-jwt-secret-here

# Backup Configuration
BACKUP_DIRECTORY=/backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE_HOUR=2

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Docker Registry
DOCKER_REGISTRY=your-registry.com
DOCKER_USERNAME=your-username
DOCKER_IMAGE_TAG=latest
